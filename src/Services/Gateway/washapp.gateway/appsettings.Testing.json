{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "yarp": {
    "routes": {
      "identity-service": {
        "clusterId": "identity-cluster",
        "match": {
          "path": "identity/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      },
      "Customers": {
        "clusterId": "customers-cluster",
        "match": {
          "path": "customers/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      },
      "Orders": {
        "clusterid": "orders-cluster",
        "match": {
          "path": "orders/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "clusters": {
      "identity-cluster": {
        "destinations": {
          "destination1": {
            "address": "http://testing.washapp.identity:5010"
          }

        }
      },
      "customers-cluster": {
        "destinations": {
          "destination1": {
            "address": "http://testing.washapp.customers:5020"
          }
        }
      },
      "orders-cluster": {
        "destinations": {
          "destination1": {
            "address": "http://testing.washapp.orders:5030"
          }
        }
      }
    }
  }
}